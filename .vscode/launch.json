{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Nuxt 开发环境调试",
      "program": "${workspaceFolder}/node_modules/.bin/nuxt",
      "args": ["dev"],
      "outputCapture": "std",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Chrome 客户端调试",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ]
} 